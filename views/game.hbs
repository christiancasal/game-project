<script type="text/javascript" src="javascripts/jquery-2.2.0.js"></script>
{{#unless hbsObject.logged_in}} <!--if player is NOT logged in-->
	<div class="form-container">
		<div id="login-module">
		<h2>{{hbsObject.message}}</h2>
			<form action="game/signup" method="POST">
				<h2>Sign Up</h2>
				<input type="text" name="username" placeholder="Username"><br>
				<input type="password" name="password" placeholder="Password"><br>
				<input type="submit">
			</form>
			<form action="game/login" method="POST">
				<h2>Log In</h2>
				<input type="text" name="username" placeholder="Username"><br>
				<input type="password" name="password" placeholder="Password"><br>
				<input type="submit">
			</form>
		</div>
	</div>
{{/unless}}
{{#if hbsObject.logged_in}} <!--if player IS logged in-->
	{{#unless hbsObject.character_chosen}} <!--and character is NOT chosen THEN choose character-->
		<div id="new-user">
			<div class="form-container">
				<div id="message" style="text-align:center;"><h2>{{hbsObject.message}}</h2>
					<a id="logout" href="logout">Logout</a>
				</div>
					<div class="left-float">
						<div id="current-char">
							<div id="char-name"></div>
							<div id="char-health"></div>
							<div id="char-attack"></div>
							<div id="char-picture"></div>
							<div class="clearfix"></div>
						</div>
					</div>
				<form action="game/chooseCharacter" method="POST">
					<ul id="character-list">
						{{#each hbsObject.characters}}
					    <li>
					        <label>
					            <input type="radio" name="character" value="{{this.character_id}}">
					            <img class="character" src="{{this.char_img}}" data-name="{{this.char_name}}" data-health="{{this.health_level}}" data-attack="{{this.attack_power}}" >
					        </label>
					    </li>
					    {{/each}}
					</ul>
					<div class="clearfix"></div>
					<input type="submit">
				</form>
			</div>
		</div>
		<script type="text/javascript" src="javascripts/choosePlayer.js"></script>
	{{/unless}}
{{/if}}
{{#if hbsObject.logged_in}} <!--If player IS logged in-->
	{{#if hbsObject.character_chosen}}<!--and character IS chosen THEN build game environment-->
		<div id="map-view-container">

		</div>
		<div id="action-view">
			
		</div>
		<script type="text/javascript" src="javascripts/game.js"></script>
	{{/if}}
{{/if}}