<link href='https://fonts.googleapis.com/css?family=Oswald:700' rel='stylesheet' type='text/css'>
<div id="loading_mask"><img src="images/marvel_logo.png"></div>
<div id="host" style="display:none">{{hbsObject.hostedGameId}}</div>
<h1 id="player" style="display:none">{{hbsObject.playerOne}}</h1>
<h1 id="activeGame" style="display:none">{{hbsObject.active}}</h1>
<div id="game-wrapper">
<div id="map-view-container">
  <div class="map-view">
    <div id="roll">
      <h1 id="roll-click">Roll!</h1>
      <ul >
        <li class="roll-choice" data="1">Press</li>
        <li class="roll-choice" data="2">Roll</li>
        <li class="roll-choice" data="3">Button</li>
      </ul>
    </div>
    <div class="container">
      <ul id="player-one">
        <li class="player-one" data="0"></li>
        <li class="player-one" data="1"></li>
        <li class="player-one" data="2"></li>
        <li class="player-one" data="3"></li>
        <li class="player-one" data="4"></li>
        <li class="player-one" data="5"></li>
        <li class="player-one" data="6"></li>
        <li class="player-one" data="7"></li>
        <li class="player-one" data="8"></li>
        <li class="player-one" data="9"></li>
        <li class="player-one" data="10"></li>
      </ul>
      <ul id="player-two">
        <li class="player-two" data="0"></li>
        <li class="player-two" data="1"></li>
        <li class="player-two" data="2"></li>
        <li class="player-two" data="3"></li>
        <li class="player-two" data="4"></li>
        <li class="player-two" data="5"></li>
        <li class="player-two" data="6"></li>
        <li class="player-two" data="7"></li>
        <li class="player-two" data="8"></li>
        <li class="player-two" data="9"></li>
        <li class="player-two" data="10"></li>
      </ul>

    </div>
  </div>

</div>
<!-- <button id="start" type="button" name="button">Start Game</button>
<button id="stop"type="button" name="button">Stop Game</button>
<button id="reset"type="button" name="button">reset player</button> -->
<div id="action-container">
  <div id="player-stats">
    <img id="player-image" src="" alt="PLAYER ONE" />
    <ul>
      <li>Player Health: <span id="player-health">1234</span></li>
      <li>Player Defense: <span id="player-defense">5678</span></li>
      <li>Player Attack: <span id="player-attack">1357</span></li>
      <li>Player Fire Rate: <span id="player-rof">1357</span></li>
    </ul>
  </div>
  <div id="action-view">


    <!-- <h1 id="action-anouncement"></h1> -->


  </div>
  <div id="enemy-stats">
    <img id="enemy-image" src="" alt="Enemy ONE" />
    <ul>
      <li>Enemy Health: <span id="enemy-health">1234</span></li>
      <li>Enemy Defense: <span id="enemy-defense">25</span></li>
      <li>Enemy Attack: <span id="enemy-attack">200</span></li>
      <li>Enemy Fire Rate: <span id="enemy-rof">200</span></li>
    </ul>
  </div>
</div>
<div id="chat-game">
  <div id="messageBoard-game">
  </div>
  <form id="gamechat">
    <span id="userName">{{hbsObject.username}}</span>
    <input type="hidden" name="user" value="{{hbsObject.username}}">
    <input name="usermsg" type="text" id="usermsg" />
    <input type="submit">
  </form>
</div>
</div>


<script>
$('#gamechat').submit(function(e){
  e.preventDefault();

  $.ajax({
    type: "POST",
    url: '/api/gamepost',
    data: $(this).serialize(), // serializes the form's elements.
    success: function(data)
    {
      console.log('success')
    }
  });
});
</script>
